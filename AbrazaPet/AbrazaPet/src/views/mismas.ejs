<style>
  .botones {
    background: rgb(24, 154, 180);
    background: linear-gradient(90deg, rgba(24, 154, 180, 1) 13%, rgba(5, 68, 94, 1) 59%);
    box-shadow: 2px 2px 5px #000000;
  }

  .btn {
    box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3);
  }

  .navbar {
    background: rgb(24, 154, 180);
    background: linear-gradient(90deg, rgba(24, 154, 180, 1) 0%, rgba(5, 68, 94, 1) 12%);
    box-shadow: 2px 2px 5px #000000;
  }

  .iconos {
    float: left;
  }
  .imagencard {
    width: 200px;
    height: auto;
    box-shadow: 2px 2px 5px #000000;
  }
  .imagenusuario{
    width: 100px;
    height: 100px ;
  }

  .mascotacard{
    margin: 10px 10px 10px 10px;
  }

  .navboton {
    float: right;
  }
</style>

<body>
  <!--navegaciÃ³n-->
  <!-- Toggler/collapsibe Button -->

  <nav class="navbar navbar-dark sticky-top">
    <div class="container">
      <!-- Brand -->
      <a href="javascript:history.back()"><i class="fas fa-arrow-left fa-2x text-white"></i></a>
      <a class="navbar-brand text-center" href="/"><b>Mascotas</b></a>
      <a href="/addmas"><i class="fas fa-plus fa-2x text-white"></i></a>
    </div>
  </nav>

  <div class="container">
    <% for(var i = 0; i < mascotas.length; i++){ %>
        <div class="card mascotacard">
            <div class="card-body">
                <div class="text-center">
                    <a href=""><img class="imagencard" src="/imagenes/<%= mascotas[i].imagen_mascota%>"
                        alt="Imagen<%= mascotas[i].imagen_mascota%>" />
                    </a>
                    <br>
                    <div class="mt-3">
                      <b>Nombre: <%= mascotas[i].nombre_mascota%></b>
                      <br>
                      <b>Color: <%= mascotas[i].color_mascota%></b>
                    </div>
                    <a href=""><div class="card border-danger mt-3">
                        <button type="button" class="btn btn-outline-danger"><h4><b>Notificar perdido</b></h4></button>
                      </div></a>
                </div>
            </div>
          </div>
        
        <% } %>
  </div>





